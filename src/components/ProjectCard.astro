---
export interface Props {
  title: string;
  category: string;
  image: string;
  link: string;
}

const { title, category, image, link } = Astro.props;
---

<a href={link} class="project-card block">
  <img src={image} alt={title} class="w-full h-64 object-cover" />
  <div class="overlay">
    <span class="text-blazingEmber text-sm uppercase tracking-wider">{category}</span>
    <h3 class="text-xl font-bold mt-1">{title}</h3>
    <div class="mt-2 flex items-center text-sm font-medium">
      <span>View Project</span>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
      </svg>
    </div>
  </div>
</a>