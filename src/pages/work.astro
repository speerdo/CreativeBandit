---

<Layout title="Our Work" description="Explore our portfolio of web development, design, and digital projects for clients across various industries">
  <!-- Hero Section -->
  <section class="section pt-24 relative">
    <div class="container mx-auto">
      <div class="max-w-3xl">
        <div class="mb-6 flex items-center">
          <span class="flame-dot"></span>
          <span class="uppercase tracking-wider text-light-300">Our Portfolio</span>
        </div>
        <h1 class="mb-6">Real <span class="gradient-text">Projects</span>, Real Results</h1>
        <p class="text-xl text-light-300 mb-8">
          Production applications showcasing AI automation, full-stack development, and measurable business outcomes across healthcare, e-commerce, and enterprise software.
        </p>
      </div>
    </div>
    
    <div class="absolute top-0 right-0 w-full h-full -z-10">
      <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-blazingEmber/10 to-transparent opacity-30"></div>
    </div>
  </section>
  
  <!-- Portfolio Filter and Grid -->
  <section class="pb-24">
    <div class="container mx-auto">
      <!-- Filter Buttons -->
      <div class="flex flex-wrap justify-center mb-12 gap-2">
        {categories.map(category => (
          <button 
            data-filter={category.id} 
            class="px-6 py-2 rounded-full bg-dark-100 hover:bg-blazingEmber/10 transition-colors duration-300 focus:outline-none filter-btn"
            class:list={[{ 'bg-blazingEmber/10 text-blazingEmber': category.id === 'all' }]}
          >
            {category.name}
          </button>
        ))}
      </div>
      
      <!-- Portfolio Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="portfolio-grid">
        {projects.map(project => (
          <div class="project-item" data-category={project.category}>
            <ProjectCard 
              title={project.title} 
              category={project.categoryName} 
              image={project.image} 
              link={project.link} 
            />
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Case Studies Section -->
  <section class="section bg-dark-200">
    <div class="container mx-auto">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <div class="mb-4 flex items-center justify-center">
          <span class="flame-dot"></span>
          <span class="uppercase tracking-wider text-light-300">Featured Projects</span>
        </div>
        <h2 class="mb-6">Project <span class="gradient-text">Highlights</span></h2>
        <p class="text-light-300">Detailed look at key projects showcasing AI automation, e-commerce optimization, and healthcare technology solutions.</p>
      </div>
      
      <!-- Featured Case Study -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center mb-20">
        <div>
          <img 
            src="https://images.pexels.com/photos/8386440/pexels-photo-8386440.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
            alt="DowntownDry AI Verification System" 
            class="rounded-lg w-full h-auto"
          />
        </div>
        
        <div>
          <div class="mb-4 flex items-center">
            <span class="flame-dot"></span>
            <span class="uppercase tracking-wider text-light-300">Featured Project</span>
          </div>
          <h3 class="text-2xl font-bold mb-3">DowntownDry AI Verification</h3>
          <p class="text-light-300 mb-6">
            Nationwide alcohol-free venue directory with AI-powered verification using Google APIs and Gemini AI. Achieved 100% accuracy in venue validation while reducing manual review time by 90%.
          </p>
          
          <div class="grid grid-cols-2 gap-6 mb-6">
            <div>
              <h4 class="text-sm text-light-300 mb-1">Type</h4>
              <p>Personal Project</p>
            </div>
            <div>
              <h4 class="text-sm text-light-300 mb-1">Category</h4>
              <p>AI Integration</p>
            </div>
            <div>
              <h4 class="text-sm text-light-300 mb-1">Key Result</h4>
              <p>100% Accuracy</p>
            </div>
            <div>
              <h4 class="text-sm text-light-300 mb-1">Tech Stack</h4>
              <p>Astro, Gemini AI, Supabase</p>
            </div>
          </div>
          
          <a href="https://downtowndry.com" target="_blank" rel="noopener" class="btn-primary">Visit Site</a>
        </div>
      </div>
      
      <!-- Other Case Studies -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="card">
          <h3 class="text-xl font-bold mb-3">RecycleOldTech.com</h3>
          <p class="text-light-300 mb-4">Electronics recycling directory achieving 8.08% affiliate conversion rate (4x industry average) with automated SEO pipeline processing 1,000+ monthly transactions.</p>
          <a href="https://recycleoldtech.com" target="_blank" rel="noopener" class="text-blazingEmber inline-flex items-center font-medium hover:text-coreFire transition-colors duration-300">
            Visit Site
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
        
        <div class="card" id="indiaide">
          <h3 class="text-xl font-bold mb-3">IndiAide RTM System</h3>
          <p class="text-light-300 mb-4">HIPAA-compliant backend automation for Medicare Remote Therapeutic Monitoring billing. Secure patient data management with automated compliance reporting.</p>
          <span class="text-light-300 text-sm">Healthcare compliance project (NDA)</span>
        </div>
        
        <div class="card">
          <h3 class="text-xl font-bold mb-3">EdReports Platform</h3>
          <p class="text-light-300 mb-4">K-12 curriculum review platform migration from Java/Vue to Nuxt.js. 40% faster page loads, 30% developer productivity improvement.</p>
          <a href="https://edreports.org" target="_blank" rel="noopener" class="text-blazingEmber inline-flex items-center font-medium hover:text-coreFire transition-colors duration-300">
            Visit Site
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-24 relative overflow-hidden">
    <div class="container mx-auto relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="mb-6">Ready to <span class="gradient-text">Start</span> Your Project?</h2>
        <p class="text-light-300 text-lg mb-8">Let's collaborate to create a digital solution that meets your business goals and exceeds your expectations.</p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/contact" class="btn-primary">Contact Us</a>
          <a href="/services" class="btn-secondary">Explore Services</a>
        </div>
      </div>
    </div>
    <div class="absolute top-0 right-0 w-full h-full -z-10">
      <div class="absolute bottom-0 right-0 w-1/3 h-1/2 bg-blazingEmber/5 blur-3xl rounded-full"></div>
      <div class="absolute top-0 left-0 w-1/3 h-1/2 bg-magentaFlame/5 blur-3xl rounded-full"></div>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const filterBtns = document.querySelectorAll('.filter-btn');
    const projectItems = document.querySelectorAll<HTMLElement>('.project-item');
    
    // Initialize - show all projects
    showProjects('all');
    
    // Add click event to filter buttons
    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        // Remove active class from all buttons
        filterBtns.forEach(b => {
          b.classList.remove('bg-blazingEmber/10', 'text-blazingEmber');
        });
        
        // Add active class to clicked button
        btn.classList.add('bg-blazingEmber/10', 'text-blazingEmber');
        
        // Get filter value
        const filterValue = btn.getAttribute('data-filter');
        showProjects(filterValue);
      });
    });
    
    // Show/hide projects based on filter
    function showProjects(category: string | null) {
      projectItems.forEach(item => {
        const itemCategory = item.getAttribute('data-category');
        
        if (category === 'all' || category === itemCategory) {
          item.style.display = 'block';
        } else {
          item.style.display = 'none';
        }
      });
    }
  });
</script>