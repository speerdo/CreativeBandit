import ProjectCard from '../components/ProjectCard.astro';

const categories = [
  { id: 'all', name: 'All' },
  { id: 'ai', name: 'AI Integration' },
  { id: 'web', name: 'Web Development' },
  { id: 'ecommerce', name: 'E-commerce' },
  { id: 'healthcare', name: 'Healthcare' }
];

const projects = [
  {
    title: 'RecycleOldTech.com',
    category: 'ecommerce',
    categoryName: 'E-commerce / SEO',
    image: 'https://images.pexels.com/photos/5632402/pexels-photo-5632402.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: 'https://recycleoldtech.com',
    client: 'Personal Project'
  },
  {
    title: 'DowntownDry',
    category: 'ai',
    categoryName: 'AI Integration',
    image: 'https://images.pexels.com/photos/8386434/pexels-photo-8386434.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: 'https://downtowndry.com',
    client: 'Personal Project'
  },
  {
    title: 'IndiAide RTM System',
    category: 'healthcare',
    categoryName: 'Healthcare Tech',
    image: 'https://images.pexels.com/photos/8106498/pexels-photo-8106498.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: '#indiaide',
    client: 'IndiAide (NDA)'
  },
  {
    title: 'EdReports Platform Migration',
    category: 'web',
    categoryName: 'Full-Stack Development',
    image: 'https://images.pexels.com/photos/5473302/pexels-photo-5473302.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: 'https://edreports.org',
    client: 'EdReports'
  },
  {
    title: 'Eli Lilly Design System',
    category: 'web',
    categoryName: 'Enterprise Development',
    image: 'https://images.pexels.com/photos/196644/pexels-photo-196644.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: '#eli-lilly',
    client: 'Eli Lilly'
  },
  {
    title: 'Salesforce Platform',
    category: 'web',
