---
import Layout from '../layouts/Layout.astro';
import TeamMember from '../components/TeamMember.astro';

// Solo operation - no team section needed
const team = [];

const values = [
  {
    title: "Innovation",
    description: "We stay ahead of digital trends, constantly exploring new technologies and creative approaches to deliver cutting-edge solutions that set our clients apart."
  },
  {
    title: "Authenticity",
    description: "We believe in creating genuine brand experiences that reflect your unique identity and resonate authentically with your target audience."
  },
  {
    title: "Excellence",
    description: "We strive for excellence in every pixel, every line of code, and every client interaction, ensuring the highest quality in all our deliverables."
  },
  {
    title: "Collaboration",
    description: "We work as true partners with our clients, fostering open communication and collaborative relationships throughout every project."
  },
  {
    title: "Impact",
    description: "We focus on creating digital solutions that drive real business results and make a meaningful impact on our clients' success."
  },
  {
    title: "Creativity",
    description: "We approach every challenge with creative thinking, finding unique solutions that capture attention and inspire action in the digital space."
  }
];

// Calculate years of experience (started October 2017)
const startDate = new Date(2017, 9); // October 2017
const now = new Date();
let yearsExperience = now.getFullYear() - startDate.getFullYear();
if (now.getMonth() < 9) {
  yearsExperience -= 1;
}

const stats = [
  { value: `${yearsExperience}+`, label: "Years Experience" },
  { value: "20+", label: "Projects Completed" },
  { value: "10+", label: "Clients Served" },
  { value: "4x", label: "Industry Conversion Avg" }
];

const approach = [
  {
    step: "01",
    title: "Discovery & Strategy",
    description: "We start by diving deep into your business goals, target audience, and market landscape to develop a comprehensive digital strategy."
  },
  {
    step: "02", 
    title: "Design & Development",
    description: "Our creative team crafts compelling visual experiences while our developers build robust, scalable solutions using the latest technologies."
  },
  {
    step: "03",
    title: "Testing & Optimization",
    description: "We rigorously test every aspect of your digital solution, optimizing for performance, usability, and conversion across all devices."
  },
  {
    step: "04",
    title: "Launch & Growth",
    description: "We support your launch and provide ongoing optimization to ensure your digital presence continues to evolve and grow with your business."
  }
];
---

<Layout title="About" description="AI automation specialist and full-stack developer with 8+ years building production applications for Fortune 500 companies and startups. Based in Indianapolis, serving clients nationwide.">
  <!-- Hero Section -->
  <section class="section pt-24 relative">
    <div class="container mx-auto">
      <div class="max-w-4xl">
        <div class="mb-6 flex items-center">
          <span class="flame-dot"></span>
          <span class="uppercase tracking-wider text-light-300">About Creative Bandit</span>
        </div>
        <h1 class="mb-6">Building <span class="gradient-text">Intelligent</span> Systems That Deliver Results</h1>
        <p class="text-xl text-light-300 mb-8">
          I'm Adam Speer, founder of Creative Bandit. I specialize in AI-powered automation and full-stack development that reduces manual work by 60-90% and delivers measurable business impact.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="/contact" class="btn-primary">Start Your Project</a>
          <a href="/work" class="btn-secondary">See My Work</a>
        </div>
      </div>
    </div>
    
    <div class="absolute top-0 right-0 w-full h-full -z-10">
      <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-blazingEmber/10 to-transparent opacity-30"></div>
    </div>
  </section>
  
  <!-- About Us Section -->
  <section class="py-20">
    <div class="container mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <div class="relative">
            <div class="aspect-w-4 aspect-h-3">
              <img
                src="https://images.pexels.com/photos/3184292/pexels-photo-3184292.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
                alt="Creative team collaborating on digital innovation"
                class="rounded-lg object-cover w-full h-full"
              />
            </div>
            <div class="absolute -bottom-6 -right-6 bg-dark-100 p-6 rounded-lg shadow-xl">
              <div class="grid grid-cols-2 gap-6">
                {stats.slice(0, 2).map(stat => (
                  <div class="text-center">
                    <p class="text-2xl font-bold gradient-text">{stat.value}</p>
                    <p class="text-light-300 text-xs">{stat.label}</p>
                  </div>
                ))}
                {stats.slice(2, 4).map(stat => (
                  <div class="text-center">
                    <p class="text-2xl font-bold gradient-text">{stat.value}</p>
                    <p class="text-light-300 text-xs">{stat.label}</p>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
        
        <div>
          <div class="mb-4 flex items-center">
            <span class="flame-dot"></span>
            <span class="uppercase tracking-wider text-light-300">Who We Are</span>
          </div>
          <h2 class="mb-6">From Enterprise to <span class="gradient-text">AI Automation</span></h2>
          <p class="mb-6 text-light-300">
            With 8+ years of full-stack development experience, I've built production applications for Fortune 500 companies including Eli Lilly and Salesforce, as well as mission-driven startups in healthcare and education. My background spans pharmaceutical web applications, HIPAA-compliant healthcare systems, and scalable SaaS platforms serving thousands of users.
          </p>
          <p class="mb-6 text-light-300">
            Today, I focus on AI-powered automation systems using OpenAI, Anthropic, and Google Gemini APIs. Recent projects include AI verification systems achieving 100% accuracy, automated marketing pipelines processing 1,000+ monthly transactions, and healthcare compliance automation for Medicare billing.
          </p>
          <p class="mb-6 text-light-300">
            Beyond client work, I build and operate my own web properties including DowntownDry (a nationwide alcohol-free venue directory) and RecycleOldTech.com (an electronics recycling directory with automated affiliate systems achieving 8.08% conversion—4x industry average).
          </p>
          <div class="bg-dark-200 p-6 rounded-lg">
            <p class="text-blazingEmber font-semibold mb-2">My Focus</p>
            <p class="text-light-300">Building intelligent systems that eliminate manual work and deliver measurable business impact—whether that's automating hours of repetitive tasks, increasing conversion rates, or building platforms that scale to serve millions of users.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Approach Section -->
  <section class="section bg-dark-200">
    <div class="container mx-auto">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <div class="mb-4 flex items-center justify-center">
          <span class="flame-dot"></span>
          <span class="uppercase tracking-wider text-light-300">Our Process</span>
        </div>
        <h2 class="mb-6">How We Create <span class="gradient-text">Digital Magic</span></h2>
        <p class="text-light-300">Our proven methodology ensures every project delivers exceptional results through strategic planning, creative excellence, and technical precision.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {approach.map(step => (
          <div class="relative">
            <div class="card h-full">
              <div class="text-4xl font-bold gradient-text mb-4">{step.step}</div>
              <h3 class="text-xl font-bold mb-3">{step.title}</h3>
              <p class="text-light-300">{step.description}</p>
            </div>
            {step.step !== "04" && (
              <div class="hidden lg:block absolute top-8 -right-4 w-8 h-0.5 bg-gradient-to-r from-blazingEmber to-magentaFlame"></div>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Our Values Section -->
  <section class="section">
    <div class="container mx-auto">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <div class="mb-4 flex items-center justify-center">
          <span class="flame-dot"></span>
          <span class="uppercase tracking-wider text-light-300">Our Core Values</span>
        </div>
        <h2 class="mb-6">The Principles That <span class="gradient-text">Drive</span> Us</h2>
        <p class="text-light-300">These fundamental values shape our culture, guide our decisions, and define how we approach every client relationship and project.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {values.map(value => (
          <div class="card">
            <h3 class="text-xl font-bold mb-3">{value.title}</h3>
            <p class="text-light-300">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- What Sets Us Apart Section -->
  <section class="section bg-dark-200">
    <div class="container mx-auto">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <div class="mb-4 flex items-center justify-center">
            <span class="flame-dot"></span>
            <span class="uppercase tracking-wider text-light-300">Why Work With Me</span>
          </div>
          <h2 class="mb-6">What Sets Creative Bandit <span class="gradient-text">Apart</span></h2>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          <div class="space-y-8">
            <div>
              <h3 class="text-xl font-bold mb-3">AI Automation Expertise</h3>
              <p class="text-light-300">Production-tested experience with OpenAI GPT, Anthropic Claude, and Google Gemini APIs. Building intelligent systems that achieve 100% verification accuracy and reduce manual work by 90%.</p>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-3">Enterprise Background</h3>
              <p class="text-light-300">8+ years building applications for Fortune 500 companies (Eli Lilly, Salesforce) with expertise in design systems, accessibility testing, and scalable architecture.</p>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-3">Full-Stack Capability</h3>
              <p class="text-light-300">Complete solutions from React/Vue.js frontend to Node.js/Python backend, deployed on Vercel and AWS. No handoffs, no coordination overhead.</p>
            </div>
          </div>
          
          <div class="space-y-8">
            <div>
              <h3 class="text-xl font-bold mb-3">Proven Results</h3>
              <p class="text-light-300">8.08% affiliate conversion (4x industry average), 40% page load improvement, 100% AI verification accuracy. Real metrics from real projects.</p>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-3">Healthcare Compliance</h3>
              <p class="text-light-300">HIPAA-compliant system development experience with secure patient data management, Medicare billing automation, and regulatory compliance.</p>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-3">Async-First Collaboration</h3>
              <p class="text-light-300">Remote-first workflow with clear communication and flexible scheduling. Based in Indianapolis, serving clients nationwide with responses within 24 hours.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Team Section -->
  {team.length > 0 && (
    <section class="section">
      <div class="container mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <div class="mb-4 flex items-center justify-center">
            <span class="flame-dot"></span>
            <span class="uppercase tracking-wider text-light-300">Our Team</span>
          </div>
          <h2 class="mb-6">Meet The <span class="gradient-text">Creative Minds</span> Behind Our Work</h2>
          <p class="text-light-300">Our diverse team of passionate experts brings creativity, technical skill, and strategic thinking to every project.</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {team.map(member => (
            <TeamMember 
              name={member.name} 
              position={member.position} 
              image={member.image} 
              bio={member.bio} 
            />
          ))}
        </div>
      </div>
    </section>
  )}
  
  <!-- CTA Section -->
  <section class="py-24 bg-dark-200 relative overflow-hidden">
    <div class="container mx-auto relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="mb-6">Ready to Transform Your <span class="gradient-text">Digital Presence</span>?</h2>
        <p class="text-light-300 text-lg mb-8">Let's collaborate to create something extraordinary. Whether you're launching a new venture or evolving an existing brand, we're here to make your digital vision a reality.</p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/contact" class="btn-primary">Start Your Project</a>
          <a href="/work" class="btn-secondary">View Our Portfolio</a>
        </div>
      </div>
    </div>
    <div class="absolute top-0 right-0 w-full h-full -z-10">
      <div class="absolute bottom-0 right-0 w-1/3 h-1/2 bg-blazingEmber/5 blur-3xl rounded-full"></div>
      <div class="absolute top-0 left-0 w-1/3 h-1/2 bg-magentaFlame/5 blur-3xl rounded-full"></div>
    </div>
  </section>
</Layout>
