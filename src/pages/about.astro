---
import Layout from '../layouts/Layout.astro';
import TeamMember from '../components/TeamMember.astro';

// Placeholder team data - to be replaced with actual team information
const team = [
  {
    name: "Alex Morgan",
    position: "Founder & Creative Director",
    image: "https://images.pexels.com/photos/2379004/pexels-photo-2379004.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    bio: "Alex founded Creative Bandit with a vision to blend artistry and technology in creating digital experiences that resonate and inspire."
  },
  {
    name: "Jamie Rivera",
    position: "Lead UX Designer",
    image: "https://images.pexels.com/photos/415829/pexels-photo-415829.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    bio: "Jamie brings over a decade of design experience, focusing on creating intuitive and engaging user experiences across digital platforms."
  },
  {
    name: "Noah Chen",
    position: "Tech Lead",
    image: "https://images.pexels.com/photos/614810/pexels-photo-614810.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2", 
    bio: "Noah leads our development team, ensuring every project we deliver is built with clean, maintainable code and cutting-edge technology."
  },
  {
    name: "Olivia Taylor",
    position: "AI Integration Specialist",
    image: "https://images.pexels.com/photos/1239291/pexels-photo-1239291.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    bio: "Olivia specializes in integrating AI solutions that enhance functionality and provide more intelligent user experiences."
  }
];

const values = [
  {
    title: "Innovation",
    description: "We stay ahead of digital trends, constantly exploring new technologies and creative approaches to deliver cutting-edge solutions that set our clients apart."
  },
  {
    title: "Authenticity",
    description: "We believe in creating genuine brand experiences that reflect your unique identity and resonate authentically with your target audience."
  },
  {
    title: "Excellence",
    description: "We strive for excellence in every pixel, every line of code, and every client interaction, ensuring the highest quality in all our deliverables."
  },
  {
    title: "Collaboration",
    description: "We work as true partners with our clients, fostering open communication and collaborative relationships throughout every project."
  },
  {
    title: "Impact",
    description: "We focus on creating digital solutions that drive real business results and make a meaningful impact on our clients' success."
  },
  {
    title: "Creativity",
    description: "We approach every challenge with creative thinking, finding unique solutions that capture attention and inspire action in the digital space."
  }
];

const stats = [
  { value: "8+", label: "Years Experience" },
  { value: "150+", label: "Projects Completed" },
  { value: "40+", label: "Happy Clients" },
  { value: "10+", label: "Industry Awards" }
];

const approach = [
  {
    step: "01",
    title: "Discovery & Strategy",
    description: "We start by diving deep into your business goals, target audience, and market landscape to develop a comprehensive digital strategy."
  },
  {
    step: "02", 
    title: "Design & Development",
    description: "Our creative team crafts compelling visual experiences while our developers build robust, scalable solutions using the latest technologies."
  },
  {
    step: "03",
    title: "Testing & Optimization",
    description: "We rigorously test every aspect of your digital solution, optimizing for performance, usability, and conversion across all devices."
  },
  {
    step: "04",
    title: "Launch & Growth",
    description: "We support your launch and provide ongoing optimization to ensure your digital presence continues to evolve and grow with your business."
  }
];
---

<Layout title="About Us" description="Learn about Creative Bandit, our innovative approach to digital experiences, and what drives us to create exceptional solutions that make an impact">
  <!-- Hero Section -->
  <section class="section pt-24 relative">
    <div class="container mx-auto">
      <div class="max-w-4xl">
        <div class="mb-6 flex items-center">
          <span class="flame-dot"></span>
          <span class="uppercase tracking-wider text-light-300">Our Story</span>
        </div>
        <h1 class="mb-6">Where Creative <span class="gradient-text">Vision</span> Meets Digital Innovation</h1>
        <p class="text-xl text-light-300 mb-8">
          Creative Bandit is more than a digital agency—we're your strategic partner in creating bold, impactful digital experiences that break through the noise and drive real results for your business.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="/contact" class="btn-primary">Start Your Project</a>
          <a href="/work" class="btn-secondary">See Our Work</a>
        </div>
      </div>
    </div>
    
    <div class="absolute top-0 right-0 w-full h-full -z-10">
      <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-blazingEmber/10 to-transparent opacity-30"></div>
    </div>
  </section>
  
  <!-- About Us Section -->
  <section class="py-20">
    <div class="container mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <div class="relative">
            <div class="aspect-w-4 aspect-h-3">
              <img
                src="https://images.pexels.com/photos/3184292/pexels-photo-3184292.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
                alt="Creative team collaborating on digital innovation"
                class="rounded-lg object-cover w-full h-full"
              />
            </div>
            <div class="absolute -bottom-6 -right-6 bg-dark-100 p-6 rounded-lg shadow-xl">
              <div class="grid grid-cols-2 gap-6">
                {stats.slice(0, 2).map(stat => (
                  <div class="text-center">
                    <p class="text-2xl font-bold gradient-text">{stat.value}</p>
                    <p class="text-light-300 text-xs">{stat.label}</p>
                  </div>
                ))}
                {stats.slice(2, 4).map(stat => (
                  <div class="text-center">
                    <p class="text-2xl font-bold gradient-text">{stat.value}</p>
                    <p class="text-light-300 text-xs">{stat.label}</p>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
        
        <div>
          <div class="mb-4 flex items-center">
            <span class="flame-dot"></span>
            <span class="uppercase tracking-wider text-light-300">Who We Are</span>
          </div>
          <h2 class="mb-6">Pioneering Digital <span class="gradient-text">Transformation</span></h2>
          <p class="mb-6 text-light-300">
            Creative Bandit was born from the belief that every business deserves a digital presence that truly reflects their vision and drives meaningful growth. We're a collective of creative rebels who challenge conventional thinking to deliver extraordinary digital experiences.
          </p>
          <p class="mb-6 text-light-300">
            Our multidisciplinary approach combines strategic insight, cutting-edge design, advanced development, and AI integration to create solutions that don't just meet expectations—they exceed them. We work with forward-thinking businesses who understand that exceptional digital experiences are key to long-term success.
          </p>
          <p class="mb-6 text-light-300">
            What makes us different is our commitment to being true partners in your journey. We don't just deliver projects; we invest in your success, bringing fresh perspectives and innovative solutions that help your business thrive in an ever-evolving digital landscape.
          </p>
          <div class="bg-dark-200 p-6 rounded-lg">
            <p class="text-blazingEmber font-semibold mb-2">Our Mission</p>
            <p class="text-light-300">To empower businesses with digital solutions that are not just functional and beautiful, but transformative—creating lasting impact in their markets and meaningful connections with their audiences.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Approach Section -->
  <section class="section bg-dark-200">
    <div class="container mx-auto">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <div class="mb-4 flex items-center justify-center">
          <span class="flame-dot"></span>
          <span class="uppercase tracking-wider text-light-300">Our Process</span>
        </div>
        <h2 class="mb-6">How We Create <span class="gradient-text">Digital Magic</span></h2>
        <p class="text-light-300">Our proven methodology ensures every project delivers exceptional results through strategic planning, creative excellence, and technical precision.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {approach.map(step => (
          <div class="relative">
            <div class="card h-full">
              <div class="text-4xl font-bold gradient-text mb-4">{step.step}</div>
              <h3 class="text-xl font-bold mb-3">{step.title}</h3>
              <p class="text-light-300">{step.description}</p>
            </div>
            {step.step !== "04" && (
              <div class="hidden lg:block absolute top-8 -right-4 w-8 h-0.5 bg-gradient-to-r from-blazingEmber to-magentaFlame"></div>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Our Values Section -->
  <section class="section">
    <div class="container mx-auto">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <div class="mb-4 flex items-center justify-center">
          <span class="flame-dot"></span>
          <span class="uppercase tracking-wider text-light-300">Our Core Values</span>
        </div>
        <h2 class="mb-6">The Principles That <span class="gradient-text">Drive</span> Us</h2>
        <p class="text-light-300">These fundamental values shape our culture, guide our decisions, and define how we approach every client relationship and project.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {values.map(value => (
          <div class="card">
            <h3 class="text-xl font-bold mb-3">{value.title}</h3>
            <p class="text-light-300">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- What Sets Us Apart Section -->
  <section class="section bg-dark-200">
    <div class="container mx-auto">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <div class="mb-4 flex items-center justify-center">
            <span class="flame-dot"></span>
            <span class="uppercase tracking-wider text-light-300">Why Choose Us</span>
          </div>
          <h2 class="mb-6">What Sets Creative Bandit <span class="gradient-text">Apart</span></h2>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          <div class="space-y-8">
            <div>
              <h3 class="text-xl font-bold mb-3">AI-Powered Innovation</h3>
              <p class="text-light-300">We integrate cutting-edge AI technologies to enhance user experiences, automate processes, and provide intelligent solutions that keep you ahead of the competition.</p>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-3">Full-Stack Expertise</h3>
              <p class="text-light-300">From initial strategy and design to development, deployment, and ongoing optimization—we handle every aspect of your digital journey with expertise and care.</p>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-3">Performance-Driven Design</h3>
              <p class="text-light-300">Beautiful designs that convert. We create visually stunning experiences that are optimized for performance, accessibility, and user engagement across all devices.</p>
            </div>
          </div>
          
          <div class="space-y-8">
            <div>
              <h3 class="text-xl font-bold mb-3">Agile & Transparent</h3>
              <p class="text-light-300">Our agile methodology ensures rapid iteration and continuous improvement, while our transparent communication keeps you informed every step of the way.</p>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-3">Scalable Solutions</h3>
              <p class="text-light-300">We build with growth in mind, creating flexible, scalable solutions that evolve with your business and adapt to changing market demands.</p>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-3">Ongoing Partnership</h3>
              <p class="text-light-300">Our relationship doesn't end at launch. We provide ongoing support, optimization, and strategic guidance to ensure your digital presence continues to deliver results.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Team Section -->
  {team.length > 0 && (
    <section class="section">
      <div class="container mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <div class="mb-4 flex items-center justify-center">
            <span class="flame-dot"></span>
            <span class="uppercase tracking-wider text-light-300">Our Team</span>
          </div>
          <h2 class="mb-6">Meet The <span class="gradient-text">Creative Minds</span> Behind Our Work</h2>
          <p class="text-light-300">Our diverse team of passionate experts brings creativity, technical skill, and strategic thinking to every project.</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {team.map(member => (
            <TeamMember 
              name={member.name} 
              position={member.position} 
              image={member.image} 
              bio={member.bio} 
            />
          ))}
        </div>
      </div>
    </section>
  )}
  
  <!-- CTA Section -->
  <section class="py-24 bg-dark-200 relative overflow-hidden">
    <div class="container mx-auto relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="mb-6">Ready to Transform Your <span class="gradient-text">Digital Presence</span>?</h2>
        <p class="text-light-300 text-lg mb-8">Let's collaborate to create something extraordinary. Whether you're launching a new venture or evolving an existing brand, we're here to make your digital vision a reality.</p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/contact" class="btn-primary">Start Your Project</a>
          <a href="/work" class="btn-secondary">View Our Portfolio</a>
        </div>
      </div>
    </div>
    <div class="absolute top-0 right-0 w-full h-full -z-10">
      <div class="absolute bottom-0 right-0 w-1/3 h-1/2 bg-blazingEmber/5 blur-3xl rounded-full"></div>
      <div class="absolute top-0 left-0 w-1/3 h-1/2 bg-magentaFlame/5 blur-3xl rounded-full"></div>
    </div>
  </section>
</Layout>
