---
import Layout from '../layouts/Layout.astro';
import TeamMember from '../components/TeamMember.astro';

const team = [
  {
    name: "Alex Morgan",
    position: "Founder & Creative Director",
    image: "https://images.pexels.com/photos/2379004/pexels-photo-2379004.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    bio: "Alex founded Flame Studio with a vision to blend artistry and technology in creating digital experiences that resonate and inspire."
  },
  {
    name: "Jamie Rivera",
    position: "Lead UX Designer",
    image: "https://images.pexels.com/photos/415829/pexels-photo-415829.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    bio: "Jamie brings over a decade of design experience, focusing on creating intuitive and engaging user experiences across digital platforms."
  },
  {
    name: "Noah Chen",
    position: "Tech Lead",
    image: "https://images.pexels.com/photos/614810/pexels-photo-614810.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2", 
    bio: "Noah leads our development team, ensuring every project we deliver is built with clean, maintainable code and cutting-edge technology."
  },
  {
    name: "Olivia Taylor",
    position: "AI Integration Specialist",
    image: "https://images.pexels.com/photos/1239291/pexels-photo-1239291.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    bio: "Olivia specializes in integrating AI solutions that enhance functionality and provide more intelligent user experiences."
  }
];

const values = [
  {
    title: "Excellence",
    description: "We strive for excellence in everything we do, from design and development to client communication and support."
  },
  {
    title: "Innovation",
    description: "We embrace new technologies and creative approaches to push boundaries and deliver forward-thinking solutions."
  },
  {
    title: "Collaboration",
    description: "We believe in the power of collaboration—both within our team and with our clients—to achieve the best results."
  },
  {
    title: "Integrity",
    description: "We operate with honesty, transparency, and ethical practices in all our business relationships and decisions."
  },
  {
    title: "Client Focus",
    description: "We prioritize our clients' needs and goals, working as an extension of their team to ensure their success."
  },
  {
    title: "Adaptability",
    description: "We remain flexible and responsive to changing technologies, market trends, and client requirements."
  }
];

const stats = [
  { value: "10+", label: "Years Experience" },
  { value: "200+", label: "Projects Completed" },
  { value: "50+", label: "Happy Clients" },
  { value: "15+", label: "Industry Awards" }
];
---

<Layout title="About Us" description="Learn about Flame Studio, our team, values, and what drives us to create exceptional digital experiences">
  <!-- Hero Section -->
  <section class="section pt-24 relative">
    <div class="container mx-auto">
      <div class="max-w-3xl">
        <div class="mb-6 flex items-center">
          <span class="flame-dot"></span>
          <span class="uppercase tracking-wider text-light-300">Our Story</span>
        </div>
        <h1 class="mb-6">Igniting Digital <span class="gradient-text">Experiences</span> Since 2013</h1>
        <p class="text-xl text-light-300 mb-8">
          We're a team of designers, developers, and digital strategists passionate about creating memorable digital experiences that drive real business results.
        </p>
      </div>
    </div>
    
    <div class="absolute top-0 right-0 w-full h-full -z-10">
      <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-blazingEmber/10 to-transparent opacity-30"></div>
    </div>
  </section>
  
  <!-- About Us Section -->
  <section class="py-16">
    <div class="container mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="relative">
            <div class="aspect-w-4 aspect-h-3">
              <img
                src="https://images.pexels.com/photos/3184292/pexels-photo-3184292.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
                alt="Our team collaborating"
                class="rounded-lg object-cover w-full h-full"
              />
            </div>
            <div class="absolute -bottom-6 -right-6 bg-dark-100 p-4 rounded-lg shadow-lg">
              <div class="grid grid-cols-2 gap-4">
                {stats.slice(0, 2).map(stat => (
                  <div class="text-center">
                    <p class="text-2xl font-bold gradient-text">{stat.value}</p>
                    <p class="text-light-300 text-xs">{stat.label}</p>
                  </div>
                ))}
                {stats.slice(2, 4).map(stat => (
                  <div class="text-center">
                    <p class="text-2xl font-bold gradient-text">{stat.value}</p>
                    <p class="text-light-300 text-xs">{stat.label}</p>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
        
        <div>
          <div class="mb-4 flex items-center">
            <span class="flame-dot"></span>
            <span class="uppercase tracking-wider text-light-300">Who We Are</span>
          </div>
          <h2 class="mb-6">Crafting Digital <span class="gradient-text">Excellence</span></h2>
          <p class="mb-6 text-light-300">
            Flame Studio was founded in 2013 with a simple mission: to create digital experiences that stand out in a crowded online world. What began as a small design studio has evolved into a full-service digital agency with a reputation for excellence.
          </p>
          <p class="mb-6 text-light-300">
            We combine strategic thinking, creative design, and technical expertise to deliver solutions that not only look beautiful but also perform exceptionally well. Our work spans across industries, from startups to established enterprises, each with unique challenges and goals.
          </p>
          <p class="text-light-300">
            What sets us apart is our commitment to treating each project as a partnership. We dive deep into understanding your business, audiences, and objectives to create digital solutions that truly represent your brand and drive measurable results.
          </p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Our Values Section -->
  <section class="section bg-dark-200">
    <div class="container mx-auto">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <div class="mb-4 flex items-center justify-center">
          <span class="flame-dot"></span>
          <span class="uppercase tracking-wider text-light-300">Our Core Values</span>
        </div>
        <h2 class="mb-6">The Principles That <span class="gradient-text">Guide</span> Us</h2>
        <p class="text-light-300">These fundamental values shape our culture, drive our decisions, and define how we work with our clients and each other.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {values.map(value => (
          <div class="card">
            <h3 class="text-xl font-bold mb-3">{value.title}</h3>
            <p class="text-light-300">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Team Section -->
  <section class="section">
    <div class="container mx-auto">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <div class="mb-4 flex items-center justify-center">
          <span class="flame-dot"></span>
          <span class="uppercase tracking-wider text-light-300">Our Team</span>
        </div>
        <h2 class="mb-6">Meet The <span class="gradient-text">Talent</span> Behind Our Work</h2>
        <p class="text-light-300">Our diverse team of passionate experts brings creativity, technical skill, and strategic thinking to every project.</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {team.map(member => (
          <TeamMember 
            name={member.name} 
            position={member.position} 
            image={member.image} 
            bio={member.bio} 
          />
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-24 bg-dark-200 relative overflow-hidden">
    <div class="container mx-auto relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="mb-6">Ready to <span class="gradient-text">Collaborate</span> With Us?</h2>
        <p class="text-light-300 text-lg mb-8">Let's work together to bring your digital vision to life with our passion for excellence and innovation.</p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/contact" class="btn-primary">Get In Touch</a>
          <a href="/work" class="btn-secondary">See Our Work</a>
        </div>
      </div>
    </div>
    <div class="absolute top-0 right-0 w-full h-full -z-10">
      <div class="absolute bottom-0 right-0 w-1/3 h-1/2 bg-blazingEmber/5 blur-3xl rounded-full"></div>
      <div class="absolute top-0 left-0 w-1/3 h-1/2 bg-magentaFlame/5 blur-3xl rounded-full"></div>
    </div>
  </section>
</Layout>